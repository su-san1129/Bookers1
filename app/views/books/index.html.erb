<p id="notice"><%= notice %></p>
<div>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>

		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title%></td>
			<td><%= book.body%></td>
			<td><%= link_to "show", book_path(book.id), :class => "show_#{book.id}" %></td>
			<td><%= link_to "edit", edit_book_path(book.id), :class => "edit_#{book.id}" %></td>
			<td><%= link_to "destroy",destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", :class => "destroy_#{book.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

<div>
<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <p>Title</p>
    <%= f.text_field :title, :class => "book_title" %>

    <p>Body</p>
    <%= f.text_area :body, :class => "book_body" %>

    <p><%= f.submit 'Create Book' %></p>

<% end %>

</div>