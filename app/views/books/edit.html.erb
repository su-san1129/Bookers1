<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <h4>Title</h4>
    <%= f.text_field :title, :class => "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, :class => "book_body" %>
    <p><%= f.submit 'Update Book' %></p>
    <p><%= link_to "show", book_path(@book.id) %> | <%= link_to 'back', books_path, :class => "back" %>
<% end %>